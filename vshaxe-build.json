{
	"inherit": "vshaxe-node",
	"mainTarget": "tm-language",
	"targets": [
		{
			"name": "tm-language",
			"composite": true,
			"targetDependencies": [
				"tm-language-conversion",
				"tm-language-tests"
			],
			"args": {
				"debug": true
			}
		},
		{
			"inherit": "empty",
			"name": "tm-language-conversion",
			"args": {
				"haxelibs": ["yaml", "plist", "hxnodejs"],
				"classPaths": [
					"src"
				],
				"output": {
					"target": "js",
					"path": "bin/convert.js"
				},
				"main": "Converter",
				"debug": true
			},
			"afterBuildCommands": [
				["node", "bin/convert.js"]
			]
		},
		{
			"name": "tm-language-build-tests",
			"installCommands": [
				["npm", "install", "vscode-textmate"]
			],
			"args": {
				"classPaths": [
				"src"
				],
				"output": {
					"target": "js",
					"path": "bin/build.js"
				},
				"main": "Build",
				"debug": true
			},
			"afterBuildCommands": [
				["node", "bin/build.js"]
			]
		},
		{
			"name": "tm-language-tests",
			"targetDependencies": [
				"tm-language-build-tests"
			],
			"args": {
				"classPaths": [
					"src"
				],
				"output": {
					"target": "js",
					"path": "bin/test.js"
				},
				"main": "Test",
				"debug": true
			},
			"afterBuildCommands": [
				["node", "bin/test.js"]
			]
		}
	]
}